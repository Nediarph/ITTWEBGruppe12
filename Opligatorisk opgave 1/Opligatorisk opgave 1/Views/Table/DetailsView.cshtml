@model IEnumerable<Opligatorisk_opgave_1.Models.DetailsTable>

@{
    ViewBag.Title = "DetailsView";
}

<h2>DetailsView</h2>

<div class="panel panel-default">
    <div class="panel-heading">Details Table</div>

    <table class="table">
        <thead>
            <tr>
                <td>
                    <label class="control-label">ID</label>
                </td>
                <td>
                    <label class="control-label">Name</label>
                </td>
                <td>
                    <label class="control-label">Return date</label>
                </td>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpecificComponentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ComponentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReturnDate)
                    </td>
                    <td>
                        @if (item.ReturnDate != "")
                        {
                            <button type="Button" class="btn btn-default" onClick="location.href='@Url.Action("RemoveLoanInformation", "Table", new {id = item.ComponentId, specificId = item.SpecificComponentId})'">Hand in component</button>
                        }
                        else
                        {
                            <button type="Button" class="btn btn-default" onClick="location.href='@Url.Action("DetailsView", "Table", new {id = item.SpecificComponentId})'">Lend component</button>
                        }
                    </td>
                    <td>
                        <button type="Button" class="btn btn-default" onClick="location.href='@Url.Action("RemoveSpecificComponent", "Table", new {id = item.ComponentId, specificId = item.SpecificComponentId})'">Remove component</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
