doctype html
html
  extends ./shared_layout.jade
  head
    title
  body
    block content
        h1 Workouts!
        table
            tr
                th Name
                th Completions
                th Last Completed Date
            each workout, i in workoutList
                tr
                    td= workout.name
                    td= workout.completions
                    td= workout.lastCompleteDate 
                    td
                        a(href='/workouts/#{i}')
                            | Details
                            //Get info from i index and go to page where you can see exercises in the workout and add new exercises
        button(type="button", class="btn btn-default")
            | Add new Workout
            //go to addworkout