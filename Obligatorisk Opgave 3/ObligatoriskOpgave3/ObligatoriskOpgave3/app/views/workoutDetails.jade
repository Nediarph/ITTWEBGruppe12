doctype html
extends ./shared_layout.jade
html
  head
    title
  body
    block content
        h1 Workout Details
        h2  #{workout.name}
        div(class="col-lg-6")
            b
                label(for="completions")
                    | Completions
            input(type="text", name="completions", readonly, value= workout.completions)
        div(class="col-lg-6")
            b
                label(for="lastCompleteDate")
                    | Last Complete Date
            input(type="text", name="lastCompleteDate", readonly, value= workout.lastCompleteDate)

        div(class="col-lg-12")
            table(class="table table-hover table-striped table-bordered")
                thead
                    tr
                        th Name
                        th Description
                        th Reps
                        th Time
                tbody
                    each exercise, i in workout.exercises
                        tr
                            td= exercise.name
                            td= exercise.description
                            td= exercise.reps
                            td= exercise.time 
        button(type="button", class="btn btn-default")
            | Add Exercise